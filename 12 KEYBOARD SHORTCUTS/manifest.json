{
  "manifest_version": 3,
  "name": "Keyboard Shortcuts Demo",
  "version": "1.0.0",
  "description": "Lesson 11: use keyboard shortcuts to trigger extension actions.",
  "permissions": ["tabs", "scripting"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_title": "Keyboard Shortcuts Demo"
  },
  "host_permissions": ["https://*/*", "http://*/*"],
  "commands": {
    "toggle-highlight": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Toggle highlight mode on the active tab"
    },
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Open the popup manually"
    },
    "block all images on the active tab": {
      "suggested_key":{
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "block all images on the active tab"
    }
  }
}

